@model IEnumerable<LivrariaControleEmprestimo.DATA.Models.Cliente>

@{
    ViewData["Title"] = "Cliente";
}

<div class="container">
    <h1>Cliente</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Novo Cliente
        </a>
    </p>

    <div class="table-responsive">
        <table id="myTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Bi)</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                    <th>@Html.DisplayNameFor(model => model.TelefoneFixo)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Bi)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                        <td>@Html.DisplayFor(modelItem => item.TelefoneFixo)</td>
                        <td class="text-center">
                            <a asp-action="Edit" class="btn btn-success btn-sm" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i> Alterar
                            </a>
                            <a asp-action="Details" class="btn btn-primary btn-sm" asp-route-id="@item.Id">
                                <i class="bi bi-info-circle"></i> Detalhes
                            </a>
                            <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
    </div>
</div>
@section Scripts{
    <script>
        let table = new DataTable('#myTable', {
            "language": {
                url: '//cdn.datatables.net/plug-ins/2.2.2/i18n/pt-PT.json'
            }
        });
    </script>
}
