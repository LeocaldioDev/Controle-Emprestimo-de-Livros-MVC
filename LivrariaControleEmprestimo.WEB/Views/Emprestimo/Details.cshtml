@model EmprestimoViewModel

@{
    ViewData["Title"] = "Detalhes do Empréstimo";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Detalhes do Empréstimo</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.idCliente" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Informações do Empréstimo</h4>
            <hr />
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.dataEmprestimo)</label>
                <input class="form-control" value="@Model.dataEmprestimo" readonly />
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.dataEntrega)</label>
                <input class="form-control" value="@Model.dataEntrega" readonly />
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.Estado)</label>
                <input class="form-control" value="@(Model.Estado == true ? "Ativo" : "Inativo")" readonly />
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Informações do Cliente</h4>
            <hr />
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.oCliente.Nome)</label>
                <input class="form-control" value="@Model.oCliente.Nome" readonly />
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Informações do Livro</h4>
            <hr />
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.oLivro.Nome)</label>
                <input class="form-control" value="@Model.oLivro.Nome" readonly />
            </div>
        </div>
    </div>
</div>
