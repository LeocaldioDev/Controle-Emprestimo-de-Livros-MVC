@model LivrariaControleEmprestimo.DATA.Models.Livro

@{
    ViewData["Title"] = "Detalhes do Livro";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Detalhes do Livro</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Informações do Livro</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Autor"></label>
                <input asp-for="Autor" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Editora"></label>
                <input asp-for="Editora" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="AnoPublicacao"></label>
                <input asp-for="AnoPublicacao" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Edicao"></label>
                <input asp-for="Edicao" class="form-control" readonly />
            </div>
        </div>
    </div>
</div>